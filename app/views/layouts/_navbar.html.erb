<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<header>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark navbar-custom">
        <%= link_to root_path, class: 'navbar-brand' do %> 
            <%= image_tag "logo4.PNG", title: "Logo", class: "logo", width: "60", heigth: "60", style: "margin-left: 10px" %>
        <% end %>   
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav" style= "margin-left: 10px">
            <% if user_signed_in? %>
                <ul class="navbar-nav">                
                   <span style="color: white; margin-right:20px" > ¡Hola, <%= current_user.nombre.titleize %> <%= current_user.apellido.capitalize %>!</span>
                </ul>
                <ul class="navbar-nav">                
                    <%= link_to "Mis vacunas", vacunas_path, class: 'nav-link' %>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Turnos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><%= link_to "Mis turnos", turnos_path, class: 'dropdown-item' %></li>
                            <li><%= link_to "Pedir turno", turnos_pedir_url, class: 'dropdown-item' %></li>
                        </ul>
                    </li>
                </ul>                
                <ul class="navbar-nav ms-auto">
                </ul>
                <ul class="navbar-nav">  
                    <%= link_to '<i class="bi bi-person-fill"></i>'.html_safe, perfil_path , class: 'nav-link' %>              
                    <%= link_to '<i class="bi bi-box-arrow-right"></i>'.html_safe, destroy_user_session_path, method: :delete, class: 'nav-link' %>
                </ul>                
            <% else %>
                <ul class="navbar-nav">                
                    <%= link_to "Iniciar sesión", new_user_session_path, class: 'nav-link' %>
                </ul>
            <% end %>            
        </div>
    </nav>
</header>