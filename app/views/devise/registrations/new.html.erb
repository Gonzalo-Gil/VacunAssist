<div class="container">
  <h2 style="margin-top: 20px">Registrarse en VacunAssist</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :nombre, 'Nombre/s' %>
        <%= f.text_field :nombre, class: 'form-control', required: true, placeholder: 'Ingrese el nombre' %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :apellido, 'Apellido/s' %>
        <%= f.text_field :apellido, class: 'form-control', required: true, placeholder: 'Ingrese el apellido' %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :dni %><br />
        <%= f.number_field :dni, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :fecha_nacimiento, 'Fecha de nacimiento' %>
        <%= f.date_field :fecha_nacimiento, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :telefono %><br />
        <%= f.telephone_field :telefono, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "mail@example.com" %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "******" %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: "******" %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-field" style="text-align: left">
        <%= f.check_box :notificacion, class: 'my-checkbox' %>
        <%= f.label :notificacion, "Deseo recibir notificaciones de mis proximos turnos", class: 'form-check-label', style:"font-size: 20px" %>
      </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
      <div class="col-md-4">
        <%= f.label :medio_notificacion, 'Medio para recibir notificaciones' %>
        <%= f.select :medio_notificacion, ['','Correo electrÃ³nico', 'Mensaje de texto'], {multiple: :true}, { class: 'form-control'} %>
      </div>
    </div>
    
    <div class="actions" style="margin-bottom: 10px">
      <%= f.submit "Registrarse", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
