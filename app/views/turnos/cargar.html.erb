<div class="container">
    <h2 style="margin-top: 20px">Vacunas aplicadas previamente</h2>
    <%= form_for(@turno, url: turnos_crear_url(@turno)) do |f| %>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :vacuna_id, 'Vacuna aplicada' %>
                <%= grouped_collection_select(:turno, :vacuna_id, Enfermedad.all, :vacunas, :nombre, :id, :id, {multiple: :true}, { class: 'form-control'}) %>
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :fecha, 'Fecha de aplicaciÃ³n' %>
                <%= f.date_field :fecha, class: 'form-control', required: true %>
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :user_id, 'Usuario' %>
                <%= f.select :user_id, [current_user.id] %>
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :sede_id, 'Sede' %>
                <%= f.select :sede_id, [7] %>
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :estado, 'Estado' %>
                <%= f.select :estado, ['completado'] %>
            </div>
        </div>
        <div class="actions" style="margin-bottom: 10px">
            <%= f.submit "Guardar", class: 'btn btn-primary' %>
            <%= link_to "Terminar", root_path, class: 'btn btn-danger' %>
        </div>
    <% end %>
</div>
