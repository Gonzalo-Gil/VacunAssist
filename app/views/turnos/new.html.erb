<div class="container">
    <h2 style="margin-top: 20px">Pedir un turno</h2>
    <%= form_for(@turno) do |f| %>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :sede_id, 'Elija la sede donde desea aplicarse la vacuna' %>
                <%= collection_select(:turno, :sede_id, Sede.all, :id, :nombre, {multiple: :true}, { class: 'form-control'}) %>
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= f.label :fecha, 'Elija la fecha' %>
                <%= f.date_field :fecha, class: 'form-control', min: Date.tomorrow, required: true %>
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 10px">
            <div class="col-md-4">
                <%= hidden_field_tag 'enfermedad_id', [params[:id]] %>
            </div>
        </div>
        
        <div class="actions" style="margin-bottom: 10px">
            <%= f.submit "Guardar", class: 'btn btn-primary' %>
            <%= link_to "Cancelar", turnos_pedir_url, class: 'btn btn-danger' %>
        </div>
    <% end %>
</div>